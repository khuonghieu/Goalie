<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Activities.CreateGoal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BACKGROUND_COLOR"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@color/DARK_BACKGROUND_COLOR"
            android:gravity="center_horizontal"
            android:text="Create Goal"

            android:textColor="@color/pinkRed"
            android:textSize="40sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/full_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editGoalName"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Goal Name"

                android:inputType="text"
                android:textColor="@color/QUOTE_TEXT_COLOR" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/categorySpinner"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center_vertical|fill_vertical"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:ems="10"
                android:hint="Description"
                android:inputType="text"
                android:textColor="@color/QUOTE_TEXT_COLOR" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/startDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editStartDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Set start date"
                android:inputType="text"
                android:textColor="@color/QUOTE_TEXT_COLOR" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/endDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editEndDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Set end date"
                android:inputType="text"
                android:textColor="@color/QUOTE_TEXT_COLOR" />

            <Button
                android:id="@+id/createGoalButton"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:backgroundTint="@color/Blue"
                android:text="Go for it"
                android:textSize="20sp"
                tools:layout_editor_absoluteY="731dp" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>